<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="Currency Converter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txtTitle"
        android:gravity=" center"
        android:textColor="#ffffff"
        android:background="#FF0000"
        android:textSize="50px"/>
    <TextView
        android:text="Please input today exchange rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRate"
        android:gravity=" center"
        android:textSize="35px"
        android:layout_marginTop="35px"/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtInputRate"
        android:gravity="center"/>
    <TextView
        android:text="Please select following exchange currencies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCurrency"
        android:gravity=" center"
        android:textSize="35px"
        android:layout_marginTop="35px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_margin="35px">
        <TextView
            android:text="From:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtFrom"
            android:textSize="35px"
            android:layout_marginRight="10px"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spnFromCurrency" />
        <TextView
            android:text="To:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:layout_marginLeft="35px"
            android:layout_marginRight="10px"
            android:textSize="35px"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spnToCurrency" />
        <TextView
        android:text="Result:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:layout_marginLeft="35px"
        android:layout_marginRight="10px"
        android:textSize="35px"/>
    </LinearLayout>
    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConvert"
        android:layout_marginTop="35px"
        android:layout_gravity="center"/>
</LinearLayout>