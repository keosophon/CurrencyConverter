<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="Currency Converter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txtTitle"
        android:gravity=" center"
        android:textColor="#ffffff"
        android:background="#FF0000"
        android:textSize="50px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="50px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="0.0dp">
        <TextView
            android:text="Rate:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtRate"
            android:gravity=" center"
            android:textSize="35px"
            android:layout_marginLeft="50px"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="287.5dp"
            android:layout_height="45.5dp"
            android:id="@+id/txtInputRate"
            android:textColor="#ff0000"
            android:textSize="35px"
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">
        <TextView
            android:text="Amount:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtAmount"
            android:textSize="35px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="50px"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="285.0dp"
            android:layout_height="55.0dp"
            android:id="@+id/txtInputAmount"
            android:layout_marginBottom="0.0dp"
            android:textColor="#ff0000"
            android:textSize="35px"
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="50px"
        android:layout_marginLeft="10px">
        <TextView
            android:text="From:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtFrom"
            android:textSize="35px"
            android:layout_marginLeft="48px"
            android:layout_marginRight="10px"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="33.0dp"
            android:id="@+id/spnFromCurrency"
            android:layout_marginRight="18.0dp" 
            android:layout_marginTop="-20px"/>
        <TextView
            android:text="To:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:layout_marginLeft="35px"
            android:layout_marginRight="10px"
            android:textSize="35px"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="30.0dp"
            android:id="@+id/spnToCurrency"
            android:layout_marginRight="16.5dp" 
            android:layout_marginTop="-20px"/>/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_marginTop="50px">
        <TextView
            android:text="Result:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtResult"
            android:layout_marginLeft="50px"
            android:layout_marginRight="10px"
            android:textSize="35px"/>
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtResultValue"
            android:textSize="35px"
            android:textColor="#ff0000"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_marginTop="50px"
        android:gravity="center"
        >
        <Button
        android:text="Convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConvert"
        />
        <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:layout_marginLeft="20px"
        />
    </LinearLayout>


    
</LinearLayout>